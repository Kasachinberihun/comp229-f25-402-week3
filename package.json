{
  "name": "myportfolio-root",
  "private": true,
  "version": "1.0.0",
  "description": "Root orchestrator to run client (Vite) and server (Express) together",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start": "npm-run-all --parallel start:client start:server",
    "start:client": "npm --prefix client run dev",
    "start:server": "npm --prefix server run dev"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
